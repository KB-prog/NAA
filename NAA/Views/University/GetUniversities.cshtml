@model IEnumerable<NAA.Data.Models.Domain.University>

@{
    ViewBag.Title = "GetUniversities";
}

<h2 class="stylecontainer">GetUniversities</h2>

<style>
    .stylecontainer {
        margin: 2%;
    }
</style>

<p class="stylecontainer">
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table stylecontainer">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.Name)*@
            @Html.ActionLink(item.Name, "GetUniversity", new {id = item.UniversityId ,Controller = "University"})
        </td>
        <td>
            
            @Html.ActionLink("Edit", "Edit", new { id = item.UniversityId, Controller = "University" }) |
            @Html.ActionLink("Details", "Details", new { id = item.UniversityId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.UniversityId })
        </td>
    </tr>
}

</table>
