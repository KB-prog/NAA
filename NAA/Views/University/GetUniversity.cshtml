@model NAA.Data.Models.Domain.University

@{
    ViewBag.Title = "GetUniversity";
}

<h2 class="stylecontainer">GetUniversity</h2>

<style>
    .stylecontainer {
        margin: 2%;
    }
</style>

<div class="stylecontainer">
    <h4>University</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p class="stylecontainer">
    @Html.ActionLink("Edit", "Edit", new { id = Model.UniversityId }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<p class="stylecontainer">
    <h2 class="stylecontainer"> Applications for @Model.Name</h2>
</p>
@if (Model.Applications.Count != 0)
{
    @Html.Partial("~/Views/University/GetApplications.cshtml", Model.Applications);
}
