@model NAA.Data.Models.Domain.University

@{
    ViewBag.Title = "GetUniversityCourse";
}

<style>
    .stylecontainer {
        margin: 2%;
    }
</style>

<div class="stylecontainer">
    <h4>University</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p class="stylecontainer">
    @Html.ActionLink("Back to Universities", "GetUniversitiesCourses", "Service")
</p>
<p class="stylecontainer">
    <h2 class="stylecontainer"> Courses for @Model.Name</h2>
</p>
@if (Model.Name == "Sheffield Hallam University")
{
    Html.RenderAction("GetSHUCourses", "Service");
}
@if (Model.Name == "Sheffield University")
{
    Html.RenderAction("GetShefCourses", "Service");
}